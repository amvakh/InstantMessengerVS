package UDP;

import java.net.*;
import java.io.*;

public class UDPServer 
{
    public static void main(String[] args) throws Exception {
        Socket socket = new Socket("localhost", 3066);
            try(InputStream inputStream = socket.getInputStream()) {
                System.out.println("The file has been received from the client.");
                byte[] buffer = new byte[20002];
                int length = inputStream.read(buffer, 0, buffer.length);
                FileOutputStream outputStream = new FileOutputStream("/Volumes/Mac Online/UDP_input.txt");
                outputStream.write(buffer, 0, length);
                outputStream.close();
                System.out.println("A new output file has been created.");
            } finally {
                socket.close();
            }
        }
    }
